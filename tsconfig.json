{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "es2015",
      "es6"
    ]
  },
  "include": [
    "./src/**/*.ts",
  ],
}